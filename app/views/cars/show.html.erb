<div class="container" style="width: 100%;">
  <div class="row">
    <div class="col-12">
      <h2 class="font-weight-bold"><%= @car.name %></h2>
      <p><%= @car.location %></p>
    </div>
  </div>

<% if @car.photos.attached? %>
  <div id="carouselExampleControls" class="carousel slide mx-auto d-flex align-items-center justify-content-center" data-bs-ride="carousel" style="width: 800px; height: 400px">
    <div class="carousel-inner">
      <% @car.photos.each_with_index do |photo, index| %>
        <div class="carousel-item <%= 'active' if index.zero? %>">
          <%= cl_image_tag photo.key, height: 400, width: 800, crop: :fill %>
        </div>
      <% end %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
<% end %>

<div class="row">
  <div class="col-6">
      <p><%= @car.description %></p>
    <h2><%= @car.price %> â‚¬/jour</h2>
  </div>
  <div class="col-6">
  <form>
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1">
  </div>
  <div class="mb-3 form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">Check me out</label>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<br>
<%= link_to 'Back to car listing', car_path(@car) %>
  </div>
</div>

<div class="row text-center">
  <div class="col-md-12">
    <h3><%= link_to 'Book this car!', new_car_booking_path(@car), class: "btn btn-lg btn-primary" %></h3>
</div>
 <div class="row text-center">
  <div class="col-md-12">
    <% if policy(@car).edit? %>
      <a><%= link_to 'Edit this car', edit_car_path, class: "btn btn-secondary" %></a>
    <% end %>
    <a><%= link_to 'Back to cars list', cars_path, class: "btn btn-secondary" %></a>
    <% if policy(@car).destroy? %>
      <%= link_to "Delete", car_path(@car), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"}, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
</div>
