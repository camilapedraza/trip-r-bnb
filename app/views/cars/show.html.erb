<div class="container" style="width: 100%;">
  <div class="row">
    <div class="col-12">
      <h2 class="font-weight-bold"><%= @car.name %></h2>
      <p><%= @car.location %></p>
    </div>
  </div>


<div class="row mt-4">
  <div class="col-6 align-middle">
<% if @car.photos.attached? %>
  <div id="carouselExampleControls" class="align-middle carousel slide mx-auto" data-bs-ride="carousel">
    <div class="carousel-inner d-flex">
      <% @car.photos.each_with_index do |photo, index| %>
        <div class="carousel-item <%= 'active' if index.zero? %>">
          <%= cl_image_tag photo.key, width:600, :aspect_ratio=>"1.9", crop: :fill %>
        </div>
      <% end %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
<% end %>
  <div class="mt-3 d-flex align-content-center">
  <img class="avatar-large" alt="avatar-large" src="http://res.cloudinary.com/dwlamenmp/image/upload/v1/development/1g3fvaz4dbepzle18vaomt5f9nhl" />
  <div class="p-3">
  <%= @car.user.email.match(/(.+)@/)[1] %>
  </div>
  </div>


  </div>
  <div class="col-6 shadow p-3 mb-3 bg-body border-3 rounded-3">
  <%= render "form", car: @car %>
<br>
  </div>
</div>

<div class="row text-center">
  <div class="col-md-12">
    <h3><%= link_to 'Book this car!', new_car_booking_path(@car), class: "btn btn-lg btn-primary" %></h3>
</div>
 <div class="row text-center">
  <div class="col-md-12">
    <% if policy(@car).edit? %>
      <a><%= link_to 'Edit this car', edit_car_path, class: "btn btn-secondary" %></a>
    <% end %>
    <a><%= link_to 'Back to cars list', cars_path, class: "btn btn-secondary" %></a>
    <% if policy(@car).destroy? %>
      <%= link_to "Delete", car_path(@car), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"}, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
</div>
